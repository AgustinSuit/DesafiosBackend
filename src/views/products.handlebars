<h1>Lista de Productos</h1>
<div class="row justify-content-center container-fluid">
    {{#each productos}}
    <div class="card m-2 text-center border-primary" style="width: 18rem;">
        <img src={{img}} class="card-img-top" alt={{this.title}}>
        <div class="card-body d-flex flex-column">
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Precio: {{this.price}}</p>
            <div class="mt-auto">
                <p class="card-text">Stock: {{this.stock}}</p>
                <a href="#" class="btn btn-primary">Detalles</a>
            </div>
        </div>
    </div>
    {{/each}}

    <div class="d-flex justify-content-evenly">
        {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}" class="btn btn-primary">Anterior</a>
        {{/if}}

        {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}" class="btn btn-primary">Siguiente</a>
        {{/if}}
    </div>
        <p class="d-flex justify-content-center">Pagina {{currentPage}} de {{totalPages}}</p>
</div>